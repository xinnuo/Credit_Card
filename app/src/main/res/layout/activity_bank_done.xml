<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ioon_back_d" />

    <TextView
        android:id="@+id/bank_hint"
        style="@style/Font15_black_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_5"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:text="新增信用卡成功！" />

    <Button
        android:id="@+id/bank_done"
        style="@style/Font15_white"
        android:layout_width="150dp"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/dimen_size_25"
        android:background="@drawable/rec_bg_trans_stroke_blue"
        android:onClick="doClick"
        android:text="确定"
        android:textColor="@color/colorAccent" />

</LinearLayout>