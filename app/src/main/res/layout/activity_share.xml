<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_30"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_30"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_size_3"
        android:text="@string/hint_share" />

    <LinearLayout
        android:id="@+id/share_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_30"
        android:layout_marginRight="@dimen/dimen_size_30"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_size_15">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/share_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/default_user"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/share_hint"
                    style="@style/Font14_black_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是XX" />

                <TextView
                    style="@style/Font14_black_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_3"
                    android:text="诸葛信用管家刷卡还卡都方便，分享给你用！" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/share_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_size_30"
            android:layout_marginLeft="@dimen/dimen_size_30"
            android:layout_marginRight="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_15"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <TextView
        style="@style/Font12_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:text="@string/hint_save"
        android:textColor="@color/red" />

</LinearLayout>