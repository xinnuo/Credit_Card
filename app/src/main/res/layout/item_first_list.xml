<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/dimen_size_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_first_img"
                android:layout_width="@dimen/dimen_size_35"
                android:layout_height="@dimen/dimen_size_35"
                android:scaleType="centerCrop"
                android:src="@mipmap/group03"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_first_name"
                        style="@style/Font15_black_dark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="还款类型" />

                    <TextView
                        android:id="@+id/item_first_price"
                        style="@style/Font14_black_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_8"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_first_type"
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="储蓄卡还款" />

                    <TextView
                        android:id="@+id/item_first_num"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_size_10"
                        android:layout_weight="1"
                        android:text="尾号(0000)" />

                    <TextView
                        android:id="@+id/item_first_rate"
                        style="@style/Font13_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费率 0.0%" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_8"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_first_time"
                        style="@style/Font13_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2017-12-06 11:22" />

                    <TextView
                        android:id="@+id/item_first_status"
                        style="@style/Font13_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易状态"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_first_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_first_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

    <View
        android:id="@+id/item_first_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_10"
        android:visibility="gone" />

</LinearLayout>