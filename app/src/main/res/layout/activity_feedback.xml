<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Font14_black_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_size_10"
        android:text="您有什么问题或建议想对我们说？"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/feedback_content"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_10"
        android:background="@drawable/rec_bg_white_stroke_divider"
        android:gravity="top"
        android:hint="您的宝贵意见，是我们进步的源泉~（150字以内）"
        android:maxLength="150"
        android:minLines="8"
        android:padding="@dimen/dimen_size_10" />

    <Button
        android:id="@+id/feedback_submit"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_blue"
        android:onClick="doClick"
        android:text="问题提交" />

</LinearLayout>