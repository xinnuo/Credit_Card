<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/password_hint"
        style="@style/Font13_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_size_10"
        android:text="验证码将发送至159****2596" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/Font14_gray"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:text="验证码" />

            <EditText
                android:id="@+id/et_yzm"
                style="@style/Font13_black"
                android:layout_width="0dp"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="6"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_size_10" />

            <Button
                android:id="@+id/bt_yzm"
                style="@style/Font13_white"
                android:layout_width="100dp"
                android:layout_height="@dimen/dimen_size_30"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:background="@drawable/rec_bg_ova_orange"
                android:gravity="center"
                android:onClick="doClick"
                android:text="发送验证码" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical">

            <TextView
                style="@style/Font14_gray"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:text="支付密码" />

            <EditText
                android:id="@+id/et_pay"
                style="@style/Font14_black_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:hint="请输入六位数字支付密码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/dimen_size_10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical">

            <TextView
                style="@style/Font14_gray"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:text="确认密码" />

            <EditText
                android:id="@+id/et_confirm"
                style="@style/Font14_black_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:hint="请再次输入支付密码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/dimen_size_10" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <Button
        android:id="@+id/bt_ok"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_blue"
        android:onClick="doClick"
        android:text="确定" />

</LinearLayout>
