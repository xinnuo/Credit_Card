<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_dialog_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_size_15"
            android:paddingTop="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/dimen_size_5"
                android:src="@drawable/umeng_socialize_wechat" />

            <TextView
                style="@style/Font13_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="微信" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_share_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_size_15"
            android:paddingTop="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/dimen_size_5"
                android:src="@drawable/umeng_socialize_wxcircle" />

            <TextView
                style="@style/Font13_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="朋友圈" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_size_15"
            android:paddingTop="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/dimen_size_5"
                android:src="@drawable/umeng_socialize_qq" />

            <TextView
                style="@style/Font13_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="QQ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_share_zone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_size_15"
            android:paddingTop="@dimen/dimen_size_15">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="@dimen/dimen_size_5"
                android:src="@drawable/umeng_socialize_qzone" />

            <TextView
                style="@style/Font13_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="QQ空间" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_dialog_share_cancel"
        style="@style/Font15_black_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="doClick"
        android:text="取消" />

</LinearLayout>