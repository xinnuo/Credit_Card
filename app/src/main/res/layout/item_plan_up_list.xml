<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_size_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_plan_img"
                android:layout_width="@dimen/dimen_size_35"
                android:layout_height="@dimen/dimen_size_35"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_logo"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_plan_name"
                        style="@style/Font15_black_dark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="还款类型" />

                    <TextView
                        android:id="@+id/item_plan_price"
                        style="@style/Font14_black_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_8">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/item_plan_type"
                                style="@style/Font13_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="储蓄卡还款" />

                            <TextView
                                android:id="@+id/item_plan_num"
                                style="@style/Font13_black"
                                android:layout_width="171dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_size_10"
                                android:layout_weight="1"
                                android:text="尾号(0000)" />

                            <TextView
                                android:id="@+id/item_plan_status"
                                style="@style/Font13_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易状态"
                                android:textColor="@color/colorAccent"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_size_8">

                            <TextView
                                style="@style/Font13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="还款日期：" />

                            <TextView
                                android:id="@+id/item_plan_time"
                                style="@style/Font13_gray"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2017-12-06" />

                            <TextView
                                android:id="@+id/item_plan_fee"
                                style="@style/Font13_black_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手续费：￥0.0"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_plan_delete"
                        style="@style/Font15_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_size_10"
                        android:background="@drawable/rec_bg_trans_stroke_blue_radius_30"
                        android:paddingBottom="@dimen/dimen_size_3"
                        android:paddingLeft="@dimen/dimen_size_18"
                        android:paddingRight="@dimen/dimen_size_18"
                        android:paddingTop="@dimen/dimen_size_3"
                        android:text="删除"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_plan_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_plan_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

    <View
        android:id="@+id/item_plan_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_10"
        android:visibility="gone" />

</LinearLayout>