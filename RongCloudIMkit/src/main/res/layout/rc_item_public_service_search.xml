<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <io.rong.imkit.widget.AsyncImageView
        android:id="@id/rc_portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        app:RCCornerRadius="3dp"
        app:RCDefDrawable="@drawable/rc_ic_def_msg_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/rc_portrait"
        android:layout_toRightOf="@+id/rc_portrait"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/rc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/rc_text_color_primary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/rc_text_color_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
